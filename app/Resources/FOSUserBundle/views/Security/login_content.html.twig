{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>

    <div class="form-group">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />

    </div>

    <div class="form-group">
        <input class="btn btn-primary submit-btn btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </div>

    <div class="form-group d-flex justify-content-between">
        <div class="form-check form-check-flat mt-0">
            <label class="form-check-label">
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="form-check-input" />
            </label>
        </div>
        <a href="{{ path('fos_user_resetting_request') }}" class="text-small forgot-password text-black">Mot de passe oublié</a>
    </div>

    <div class="text-block text-center my-3">
        <span class="text-small font-weight-semibold">S'inscrire ?</span>
        <a href="{{ path('fos_user_registration_register') }}" class="text-black text-small">Créer un nouveau compte</a>
    </div>
</form>
