{% extends "AppBundle:Message:inbox.html.twig" %}

{% block message %}
    <form action="{{ path('message_create') }}" method="post">
        <div class="form-group">
            <label for="">Destinataire</label>
            <select name="recipient" class="form-control">
                {% for user in users %}
                    <option value="{{ user.email }}">{{ user.username }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="">Objet</label>
            <input type="text" name="subject" class="form-control" placeholder="Sujet">
        </div>

        <div class="form-group">
            <label for="">Message</label>
            <textarea name="body" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="Envoyer" class="btn btn-primary btn-block">
        </div>
    </form>
{% endblock %}